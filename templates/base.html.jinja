<!doctype html>
<html lang="en" data-bs-theme="dark">
    <head>
        {% block head %}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>maltsaar.ee - {% block title %}{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fork-awesome@1.2.0/css/fork-awesome.min.css" integrity="sha256-XoaMnoYC5TH6/+ihMEnospgm0J1PM/nioxbOUdnM8HY=" crossorigin="anonymous"/>
        <link href="/assets/css/style.css" rel="stylesheet"/>
        <script>
            document.documentElement.style.opacity = 0;
            document.documentElement.style.visibility = "hidden";
        </script>
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="mt-3 mb-2">
                <nav class="navbar navbar-expand-lg pt-0 pb-0">
                    <div class="container-fluid ps-0 pe-0">
                        <span class="fw-semibold me-2" href="/">maltsaar.ee</span>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                {% for element in gtv.nav.elements %}
                                <li class="nav-item fw-semibold">
                                    {% if element["type"] == "page" %}
                                    <a data-i18n="nav-{{ loop.index }}" class="nav-link {% if element["for_page"] == tv["current_page"] %}active{% endif %}" href="{{ element["url"] }}">{{ element["title"] }}</a>
                                    {% else %}
                                    <a data-i18n="nav-{{ loop.index }}" class="nav-link" href="{{ element["url"] }}" {% if element["new_tab"] == true %}target="_blank"{% endif %}>{{ element["title"] }}</a>
                                    {% endif %}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>

            <noscript>
                <div class="alert alert-warning" role="alert">
                    JavaScript blocker detected. I've put effort into making sure the site works but some minor functionality might be unavailable.
                </div>
            </noscript>

            {# This completely breaks syntax highlighted blocks for some reason #}
            {# {% filter indent(width=12, first=False) %} #}
            {% block content %}
            {% endblock %}
            {#{% endfilter %}#}
        </div>

        <script src="/assets/js/i18n.js"></script>
        <script>
        document.addEventListener("i18nFinished", () => {
            document.documentElement.style.visibility = "visible";
            document.documentElement.style.opacity = 1;
        });
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
